@page
@model SparkAuto.Pages.ServiceTypes.DetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Service Type Details</h2>
<form method="post">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name" class="control-label"></label>
            </div>
            <div class="col-5">
                <input disabled asp-for="ServiceType.Name" class="form-control" />
                <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price" class="control-label"></label>
            </div>
            <div class="col-5">
                <input disabled asp-for="ServiceType.Price" class="form-control" />
                <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2 ">
                <div class="row">
                    <div class="col-6">
                        <a class="btn btn-info form-control" asp-page="Edit" asp-route-id="@Model.ServiceType.Id">Edit</a>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

